package chapter5;

public class DisplayFourPatterns {
	public static void main(String[]args) {
		
		System.out.println("Pattern A");
		
		for(int i=1; i<=6;i++) {
			for(int j =1; j<=i; j++)
				System.out.print(j+" ");
			System.out.println();
		}
		
		System.out.println("Pattern B");
		
		for(int i=6; i<=6;i--) {
			for(int j =1; j<=6; j++)
				System.out.print(j+" ");
			System.out.println();
		}
		
		
		
	}
}
