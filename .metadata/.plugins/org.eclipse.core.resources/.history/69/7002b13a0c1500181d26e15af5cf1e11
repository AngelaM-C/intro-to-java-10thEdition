package chapter7;

public class EightQueens {

	public static void main(String[] args) {
	
		String[][] array ={ 	   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"},
							   {"|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"," ","|"}};
		
		 for(int i=1; i< array.length; i+=2) {
			 
			 for(int j=1; j< array[i].length; j+=2) {
				 for(int f=1;f<array.length;f++) {
					 if(array[i+f][j]==" " && array[i][j+f]==" "&& array[i+f][j+f]==" ") {
						 array[i][j]="Q";
						 break;
					 } 
				 }
				
			 }
			   
		}
	}

}
