package chapter7;

public class EightQueens {

	public static void main(String[] args) {

		String[][] array = new String[8][8];

		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array.length; j++) {
				array[i][j] = "| ";
			}
		}

		
		int qcount=0;

		while(qcount<8) {
			int i= (int)(Math.random()*8);
			int j= (int)(Math.random()*8);
			
			if(isSafe(array, i, j)) {
				array[i][j]="|Q";
				qcount++;
			}
		}
		
		//print array
		for (int a = 0; a < array.length; a++) {
			for (int b = 0; b < array.length; b++) {
				System.out.print(array[a][b]);
			}
			System.out.print("|");
			System.out.println();
		}

	}
	
	public static boolean isSafe(String[][] array, int i, int j) {
		if(rowCheck(array, j)){
			return true;
		}
		return false;
	}
	

	public static boolean columnCheck(String[][] array, int row) {
		for (int i = 0; i < array.length; i++)
			if (array[row][i] == "|Q")
				return false;
		return true;
	}

	public static boolean rowCheck(String[][] array, int column) {
		for (int i = 0; i < array.length; i++)
			if (array[i][column] == "|Q")
				return false;
		return true;
	}

	public static boolean diaganolCheckLR(String[][] array,int i, int j) {
		 for(;j>=0;j--,i--) {
			if (array[i][j] == "|Q") {
				return false;
			}
		}
		 for(;i>array.length;j++,i++) {
				if (array[i][j] == "|Q") {
					return false;
				}
			}
		return true;
	}


	}

